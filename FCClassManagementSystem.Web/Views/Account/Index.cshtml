@using FCCClassManagementSystem.Domain.Entities
@model IEnumerable<User>
@{
    ViewBag.title = "Index";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<div class="panel panel-primary">
    <div class="panel-heading">
        User Accounts
    </div>
    <table class="table table-striped">
        @if (Model.Count() == 0)
        {
            <tr><th colspan="4">No Users Exits in the Database</th></tr>
        }
        else {
        <tr><th>ID</th><th>First Name</th><th>Last Name</th><th>Email Address</th></tr>
        foreach (var user in Model)
	        {
		        <tr><td>@user.Id</td><td>@user.FirstName</td><td>@user.LastName</td><td>@user.UserName</td></tr>
	        }
        }
    </table>
</div>
@Html.ActionLink("Create","Create",null,new { @class = "btn btn-primary"})
