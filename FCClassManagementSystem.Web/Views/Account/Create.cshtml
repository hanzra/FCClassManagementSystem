@model FCClassManagementSystem.Web.Models.ViewModels.NewAccountRegistration

@{
    Layout = null;
}

<!DOCTYPE html>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

<div class="panel panel-default col-md-8 col-md-offset-2 top-buffer">
    <div class="panel-heading">
        <h2>Create Class</h2>
    </div>
    <div class="panel-body col-md-4 top-buffer">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(x=>x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ConfirmPassword)
                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        }
    </div>
</div>

